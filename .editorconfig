# .editorconfig - Visual Studio 用
# ルートにあることを明示
root = true

# すべてのファイルに共通する設定
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# C/C++ 用の設定
[*.{cpp,h,hpp,c}]
indent_style = space
indent_size = 4
charset = utf-8
end_of_line = lf

# Visual Studio 固有の設定（Roslyn Analyzer 対応）
# C++ のフォーマット（Visual Studio 2019 以降）
# 例：波括弧のスタイルなど（必要に応じて追加）
# 詳細: https://learn.microsoft.com/ja-jp/visualstudio/ide/editorconfig-code-style-settings-reference

# ファイル末尾の空行を 1 行だけにする
insert_final_newline = true
